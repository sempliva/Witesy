<%= render "shared/error_messages", :target => @user %>
<%= form_for @user, html: { role: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.email_field :email, { placeholder: "Email", class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname , { placeholder: "nickname", class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password, { placeholder: "Password", class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :password %><br>
    <%= f.password_field :password_confirmation, { placeholder: "Confirrm Password", class: 'form-control'} %>
  </div>
  <%= render "shared/resetsave", { associated_form: f } %>
<% end %>
