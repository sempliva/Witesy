<div class="well well-sm address">
<div class="form-group">
<%= f.label :contact_name %>
<%= f.text_field :contact_name, { class: 'form-control', placeholder: 'Contact Name' } %>
</div>
<div class="form-group">
<%= f.label :street %>
<%= f.text_field :street, { class: 'form-control', placeholder: 'Street' } %>
</div>
<div class="form-group">
<%= f.label :city %>
<%= f.text_field :city, { class: 'form-control', placeholder: 'City' } %>
</div>
<div class="form-group">
<%= f.label :zip, 'ZIP' %>
<%= f.text_field :zip, { class: 'form-control', placeholder: 'ZIP' } %>
</div>
<div class="form-group">
<%= f.label :state %>
<%= f.select :state, us_states, { :include_blank => false }, class: 'form-control' %>
</div>
<div class="form-group">
<%= f.label :country %>
<%= f.text_field :country, { class: 'form-control', value: 'USA', disabled: true } %>
</div>
</div>
