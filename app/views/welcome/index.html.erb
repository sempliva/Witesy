<% if !$current_user %>
<%= form_tag '/welcome/authenticate', html: { role: 'form', class: "form-inline" } do %>
<div class="form-group">
   <%= text_field_tag :nickname, nil, class: "form-control", placeholder: "nickname" %>
</div>
<div class="form-group">
   <%= password_field_tag :password, nil, class: "form-control" , placeholder: "Password" %>
</div>
<div class="panel panel-default" style="margin-top: 10px;">
   <div class="panel-body" style="text-align: center;">
     <%= submit_tag"Log In", class: 'btn btn-default' %>
     <%= link_to 'Sign up', new_user_path, { class: 'btn btn-default'} %>
   </div>
</div>
<% end %>
<% end %>
