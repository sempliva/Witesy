<div class="panel panel-default">
    <div class="panel-heading">
        Customer
    </div>
    <div class="panel-body">
        <p>
          <% @customer.addresses.each do |address| %>
            <address>
                <strong><%= @customer.name %></strong><br/>
                <% if address.contact_name? %>
                    <%= address.contact_name %><br/>
                <% end %>
                <%= address.street %><br/>
                <%= address.city %>, <%= address.state %> <%= address.zip %><br/>
                <%= address.country %>
            </address>
            <% end %>
            <% if @customer.label? %>
                <strong>Label or Customer ID</strong><br/>
                <%= @customer.label %>
            <% end %>
        </p>
    </div>
</div>
<div class="text-center">
    <div class="btn-group btn-group-sm">
        <a href="/customers/<%= @customer.id %>/edit" role="button" class="btn btn-default" data-no-turbolink="true"><span class="glyphicon glyphicon-export"></span>&nbsp;Edit</a>
        <a href="/customers/<%= @customer.id %>" data-method="delete" data-confirm="Are you sure?" role="button" class="btn btn-default" data-no-turbolink="true">
        <span class="glyphicon glyphicon-remove"></span>&nbsp;Delete Customer</a>
    </div>
</div>
