<div class="panel panel-default">
    <div class="panel-heading">Customers</div>
    <table class="table table-hover table-condensed">
        <thead>
            <tr>
                <th>Label or Customer ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
            <tr class="lt-table_line" onclick="javascript:customer_clicked('<%= customer.id %>')">
                <td><%= customer.label %></td>
                <td><%= customer.name %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
    </div>
